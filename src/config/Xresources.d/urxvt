! font
URxvt.font: xft:DejaVu Sans Mono:style=Regular:size=12
URxvt.boldFont: xft:DejaVu Sans Mono:style=Bold:size=12
URxvt.italicFont: xft:DejaVu Sans Mono:style=Italic:size=12
URxvt.boldItalicFont: xft:DejaVu Sans Mono:style=Bold Italic:size=12
URxvt.letterSpace: -1
URxvt.lineSpace: 0
! URxvt.scaleHeight: 1.01

! force utf8
URxvt.locale: false
URxvt.utf8: true

! appearance
URxvt.geometry: 84x24
URxvt.internalBorder: 16
URxvt.cursorBlink: false
URxvt.cursorUnderline: false
URxvt.saveLines: 4096
URxvt.scrollBar: false
URxvt.scrollBar_right: false
URxvt.scrollBar_floating: false
URxvt.urgentOnBell: true
URxvt.depth: 24
URxvt.iso14755: false

! addons
URxvt.perl-ext-common: default,keyboard-select,tabbed,resize-font,selection-to-clipboard,pasta

! addons: keyboard:select
! h/j/k/l:    Move cursor left/down/up/right (also with arrow keys)
! g/G/0/^/$/H/M/L/f/F/;/,/w/W/b/B/e/E: More vi-like cursor movement keys
! '/'/?:      Start forward/backward search
! n/N:        Repeat last search, N: in reverse direction
! Ctrl-f/b:   Scroll down/up one screen
! Ctrl-d/u:   Scroll down/up half a screen
! v/V/Ctrl-v: Toggle normal/linewise/blockwise selection
! y/Return:   Copy selection to primary buffer, Return: quit afterwards
! Y:          Copy selected lines to primary buffer or cursor line and quit
! q/Escape:   Quit keyboard selection mode
URxvt.keysym.M-Escape: perl:keyboard-select:activate
URxvt.keysym.M-s: perl:keyboard-select:search

! addons: pasta
URxvt.keysym.Control-Shift-V:     perl:pasta:paste
URxvt.keysym.Control-Shift-C:     perl:clipboard:copy

! addons: tabbed
! shift+down arrow opens new tab
! shift+left/right navigates tabs
! ctr+left/right moves active tab
! ctrl+d closes active tab
! tabbar is clickable
URxvt.tabbed.new-button: false
URxvt.tabbed.tab-numbers: false
URxvt.tabbed.tabbar-fg: 2
URxvt.tabbed.tabbar-bg: 0
URxvt.tabbed.tab-fg:    3
URxvt.tabbed.tab-bg:    0

! addons: resize=font
! URxvt.keysym.C-minus:     resize-font:smaller
! URxvt.keysym.C-plus:      resize-font:bigger
! URxvt.keysym.C-equal:     resize-font:reset
! URxvt.keysym.C-question:  resize-font:show
URxvt.resize-font.step: 1
