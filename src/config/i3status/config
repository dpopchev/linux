# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
        color_good = "#50fa7b"
        color_degraded  = "#ffb86c"
        color_bad = "#ff5555"
}

order += "cpu_usage"
cpu_usage {
        format = "CPU %usage"
        degraded_threshold = 75
        max_threshold = 90
}

order += "load"
load {
        format = "Load %1min %5min %15min"
        max_threshold = "5.0"
}

order += 'memory'
memory {
        format = "RAM %percentage_used"
        threshold_degraded = 25
        threshold_critical = 10
}

order += 'disk /'
disk "/" {
        format = "Disk %avail"
        low_threshold = 10
}

order += "battery all"
battery all {
        format = "%status %emptytime (%percentage) / %consumption"
        last_full_capacity = false
        hide_seconds = true
        integer_battery_capacity = true
        threshold_type = 'percentage'
        low_threshold = 15
        format_down = 'No battery'
        status_chr = 'CHR'
        status_bat = 'BAT'
        status_unk = 'UNK'
        status_full = 'FULL'
}

order += "wireless _first_"
wireless _first_ {
        format_up = "WiFi %quality (%bitrate)"
        format_down = "W: down"
}

order += "ethernet _first_"
ethernet _first_ {
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

order += "tztime local"
tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}
