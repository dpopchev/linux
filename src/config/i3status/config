# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s: ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
        color_good = "#50fa7b"
        color_degraded  = "#ffb86c"
        color_bad = "#ff5555"
}

order += "load"
load {
        format = "[%1min %5min %15min]"
        max_threshold = "5.0"
}

order += "cpu_usage"
cpu_usage {
        format = "CPU %usage"
        degraded_threshold = 75
        max_threshold = 90
}

order += 'cpu_temperature 0'
cpu_temperature 0 {
        format="temp %degrees°C"
        max_threshold = 75
}

order += 'memory'
memory {
        format = "RAM %percentage_used"
        threshold_degraded = 25
        threshold_critical = 10
}

order += 'disk /'
disk "/" {
        format = "HDD %avail"
        low_threshold = 10
}

order += "battery 0"
battery 0 {
        format = "BAT0 %status %percentage"
        format_down = 'BAT0 Missing'
        last_full_capacity = true
        hide_seconds = true
        integer_battery_capacity = true
        low_threshold = 20
        threshold_type = 'percentage'
        status_chr = 'CHR'
        status_bat = 'BAT'
        status_unk = 'UNK'
        status_full = 'FULL'
}

order += "battery 1"
battery 1 {
        format = "BAT1 %status %percentage"
        format_down = 'BAT1 Missing'
        last_full_capacity = true
        hide_seconds = true
        integer_battery_capacity = true
        low_threshold = 20
        threshold_type = 'percentage'
        status_chr = 'CHR'
        status_bat = 'BAT'
        status_unk = 'UNK'
        status_full = 'FULL'
}

order += "wireless _first_"
wireless _first_ {
        format_up = "W %essid"
        format_down = "W down"
}

order += "ethernet _first_"
ethernet _first_ {
        format_up = "E %ip"
        format_down = "E down"
}


order += "tztime local"
tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}
