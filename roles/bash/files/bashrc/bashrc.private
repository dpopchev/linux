#!/usr/bin/env bash

if [[ $- != *i* ]] ; then
    # Shell is non-interactive.  Be done now!
    return
fi

rcfile=
for rcfile in /etc/bash/bashrc.d/* ; do
    [[ -r ${rcfile} ]] && source "${rcfile}"
done

for rcfile in ~/.config/dpopchev/bashrc/* ; do
    [[ -r ${rcfile} ]] && source "${rcfile}"
done

# Try to keep environment pollution down, EPA loves us.
unset rcfile
